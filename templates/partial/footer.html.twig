
  {# CARTE + CONTACT #}
  <section id="contact" class="py-5 bg-body-tertiary reveal reveal-up">
    <div class="container">
      <div class="row g-4">
        <div class="col-lg-6">
          <h2 class="section-title h1 mb-4">Où nous trouver</h2>
          <div class="map-wrapper mb-3">
            <iframe src="https://www.google.com/maps?q=5%20Rue%20des%20Arri%C3%A8res%20Foss%C3%A9s%2C%2027600%20Gaillon&output=embed" loading="lazy" referrerpolicy="no-referrer-when-downgrade" allowfullscreen></iframe>
          </div>
          <ul class="list-unstyled">
            <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>Place Salvador Allende, 5 Rue des Arrières Fossés, 27600 Gaillon</li>
            <li class="mb-2"><i class="bi bi-envelope-at me-2"></i><a href="mailto:contact@comealivefitness.fr">contact@comealivefitness.fr</a></li>
            <li class="mt-3 d-flex align-items-center gap-3">
              <span>Suivez-nous :</span>
              <a class="social-icon" href="https://www.facebook.com/comealivefitnessidf" aria-label="Facebook"><i class="bi bi-facebook fs-3"></i></a>
              <a class="social-icon" href="https://www.instagram.com/comealivefitness2775/" aria-label="Instagram"><i class="bi bi-instagram fs-3 instagram-gradient"></i></a>
            </li>
          </ul>
        </div>
        <div class="col-lg-6">
          <h2 class="section-title h1 mb-4">Contact rapide</h2>
          <form id="footer-contact" action="{{ path('contact_send') }}" method="post" class="row g-3" data-turbo="false">
            <input type="hidden" name="_token" value="{{ csrf_token('contact') }}">
            <div class="col-md-6">
              <label class="form-label">Prénom</label>
              <input type="text" name="first_name" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Nom</label>
              <input type="text" name="last_name" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Email</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Téléphone</label>
              <input type="phone" name="phone" class="form-control" required>
            </div>

            <div class="col-12">
              <label class="form-label">Sujet</label>
              <select name="goal" class="form-select">
                <option>Demande d'informations</option>
                <option>Souscrire un abonnement</option>
                <option>Autres</option>
              </select>
            </div>
            <div class="col-12">
              <label class="form-label">Message</label>
              <textarea name="message" class="form-control" rows="4" placeholder="Parlez-nous de vous…" required></textarea>
            </div>
            <div class="col-12">
              <button class="btn btn-primary btn-lg" type="submit" id="footer-contact-submit">Envoyer</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="container text-center secu1">              
        <a href="{{ path('app_mentions') }}">Mentions légales</a>
        <div class="vr"></div>
        <a href="{{ path('app_protection') }}">Protection des données</a>
        <p>&copy; 2025 Come Alive Fitness. Tous droits réservés.</p>
    </div>

  </section>


